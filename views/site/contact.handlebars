

<!--==========================
    INSIDE HERO SECTION Section
============================-->	
<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">İLETİŞİM</h1>
</section>
    
    <!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">İLETİŞİM</h2>
					</div>
				</div>
			</div>

		<div class="row">
			<div class="col-lg-12">
				<form method="POST" action="contact/email">
					{{#if sessionFlash.message}}
				<div class="{{sessionFlash.type}}">
					{{sessionFlash.message}}
				</div>
				{{/if}}
					<div class="row">
						<div class="col-md-6">
							<div class="form-group">
								<input class="form-control" name="name" type="text" placeholder="ADINIZ *" required="required" data-validation-required-message="Please enter your name.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="email" type="email" placeholder="EMAIL ADRESİNİZ*" required="required" data-validation-required-message="Please enter your email address.">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="phone" type="tel" placeholder="TELEFON NUMARANIZ *" required="required" data-validation-required-message="Please enter your phone number.">
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="col-md-6">
							<div class="form-group">
								<textarea class="form-control" name="message" placeholder="MESAJINIZ *" required="required" data-validation-required-message="Please enter a message."></textarea>
								<p class="help-block text-danger"></p>
							</div>
						</div>
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button class="main-btn" type="submit">MESAJINI GÖNDER</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>
