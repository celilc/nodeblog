

<!--==========================
    INSIDE HERO SECTION Section
============================-->	
<section class="page-image page-image-contact md-padding">
    <h1 class="text-white text-center">İLAN VER</h1>
</section>
    
    <!--==========================
    Contact Section
============================-->
<section id="contact" class="md-padding">
	<div class="container">

			<div class="row text-center">
				<div class="col-md-4 offset-md-4">
					<div class="section-header">
						<h2 class="title">İlan Ver</h2>
					</div>
				</div>
			</div>

		<div class="row">
			<div class="col-lg-12">
				<form action="/posts/test" method="POST" enctype="multipart/form-data">
					<div class="row">
						<div class="offset-2 col-md-8">
							<div class="form-group">
								<input class="form-control" name="title" type="text" placeholder="Başlık*" required="required" data-validation-required-message="Lütfen ilan başlığını giriniz">
								<p class="help-block text-danger"></p>
							</div>
                            <div class="form-group">
								<input class="form-control" name="kitapAdi" type="text" placeholder="Kitap Adı*" required="required" data-validation-required-message="Lütfen kitap adını giriniz">
								<p class="help-block text-danger"></p>
							</div>
							
							<div class="form-group">
								<input class="form-control" name="yazarAdi" type="text" placeholder="Yazar Adı*" required="required" data-validation-required-message="Lütfen yazar adını giriniz">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<textarea class="form-control" name="content" placeholder="İlan açıklama*" required="required" data-validation-required-message="Lütfen ilan açıklamanızı giriniz."></textarea>
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group " > <h3>Kitap Fotoğrafı:</h3>
								<input class="form-control" name="post_image" type="file"  required="required" data-validation-required-message="Lütfen ilan başlığını giriniz">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group"> <h3>Kitap Kategori:</h3>
									<select class="form-control" name="Category">
										{{#each categories}}

										<option value="{{id}}">{{name}}</option>
										{{/each}}

									</select>


								{{!-- <select name="kitapKategori">
  										<option value="Roman">Roman</option>
  										<option value="Hikaye">Hikaye</option>
 										<option value="Akademi">Akademi</option>
										<option value="Kişisel Gelişim">Kişisel Gelişim</option>
                                   </select>								
								<p class="help-block text-danger"></p> --}}
							</div>
								<div class="form-group">
								<input class="form-control" name="kitapBaskiYili" type="text" placeholder="Baskı Yılı*" required="required" data-validation-required-message="Lütfen kitabın baskı yılını giriniz">
								<p class="help-block text-danger"></p>
							</div>
				<div class="form-group">
								<input class="form-control" name="kitapSehir" type="text" placeholder="Şehir*" required="required" data-validation-required-message="Lütfen ilan şehrini giriniz">
								<p class="help-block text-danger"></p>
							</div>
							<div class="form-group">
								<input class="form-control" name="kitapFiyat" type="text" placeholder="Fiyat *" required="required" data-validation-required-message="Lütfen ilan fiyatınızı giriniz">
								<p class="help-block text-danger"></p>
							</div>
						</div>
					
						<div class="clearfix"></div>
						<div class="col-lg-12 text-center">
							<div id="success"></div>
							<button  class="main-btn" type="submit">İlan Oluştur</button>
						</div>
					</div>
				</form>
			</div>
		</div>

	</div>
</section>
